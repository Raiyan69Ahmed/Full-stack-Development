{% extends "base.twig" %}
{% block content %}

<div class="card shadow-sm p-4" style="max-width: 700px; margin: auto;">
    <h3 class="mb-4"><i class="fa-solid fa-pen-to-square"></i> Edit Song</h3>

    <form method="post">

        {% for field,value in song %}

            {% if field != 'id' %}

                <div class="mb-3">
                    <label class="form-label">{{ field|replace({'_':' '})|title }}</label>
                    <input type="text" name="{{ field }}" value="{{ value }}" class="form-control">
                </div>

            {% endif %}

        {% endfor %}

        <button class="btn btn-primary">
            <i class="fa-solid fa-save"></i> Update
        </button>

    </form>
</div>

{% endblock %}
